<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Board</title>
	<% include partials/head %>
</head>
<body>
	<div class="container">
	<% include partials/header %>
		<div class="row top">
			<div class="small-12 columns">
				<h1>/boards</h1>
			</div>
		</div>

		<div class="row section">
			<div class="small-12 columns">
				<div class="row topbar">
					<!-- <div class="small-1 column"></div> -->
					<div class="small-10 columns">Topic</div>
					<div class="small-2 columns">Last Activity</div>
					<!-- <div class="small-1 column">Posts</div> -->
				</div>
					
					<% genres.forEach(function(genre) { %>
					
				<div class="row comment">
					<!-- <div class="small-1 columns"> </div> -->
					<div class="small-9 small-offset-1 columns">
						<div class="row">
						<a href="/boards/<%=genre.folder_name%>"><%=genre.folder_name%></a>
						</div>
						<div class="row description">
							<%=genre.description%>
						</div>
					</div>
					<div class="small-2 columns"><%=genre.updated%></div>
					<!-- <div class="small-1 column"></div> -->
				</div>
					<% }) %>

			</div>
			<!-- <div class="small-2 medium-3 columns">
				<div class="row">
